<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body>
    <div class="grid grid-cols-6 mn-7">
      <div class="col-start-3 col-span-2">
        <%- include("header.ejs") %>
        <form>
          <div class="flex gap-2 py-4">
            <div class="flex-auto">
              <input type="text" placeholder="What's Next?" required class="border border-red-400 text-red-800 rounded w-100 p-2">
            </div>
            <div class="flex-auto">
              <input type="date" class="border border-red-400 text-red-800 rounded w-100 p-2 leading-4">
            </div>
            <div class="flex-none">
              <button type="submit" class="bg-pink-700 text-red px-5 py-2 rounded font-medium">ADD</button>
            </div>
          </div>
        </form>
        <%- include("todos.ejs") %>
        <%- include("footer.ejs") %>
      </div>
    </div>
  </body>
</html>
